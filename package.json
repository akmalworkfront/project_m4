{
  "devDependencies": {
    "esbuild": "^0.25.11",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6"
  },
  "scripts": {
    "pug": "pug pug --out Compiled-HTML --pretty --basedir pug",
    "pug:watch": "pug pug --out Compiled-HTML --pretty --basedir pug --watch",
    "js": "esbuild js/**/*.js --bundle --outdir=Compiled-HTML/js --minify",
    "js:watch": "esbuild js/**/*.js --bundle --outdir=Compiled-HTML/js --minify --watch",
    "dev": "npm-run-all --parallel pug:watch js:watch"
  }
}
